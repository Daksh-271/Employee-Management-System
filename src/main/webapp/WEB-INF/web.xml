<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.gecp.emp_performance.servlets.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.gecp.emp_performance.servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.gecp.emp_performance.servlets.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Emp_Dashboard</servlet-name>
        <servlet-class>com.gecp.emp_performance.servlets.Emp_Dashboard</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Add_Employee</servlet-name>
        <servlet-class>com.gecp.emp_performance.servlets.Add_Employee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Delete_Employee</servlet-name>
        <servlet-class>com.gecp.emp_performance.servlets.Delete_Employee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditForm</servlet-name>
        <servlet-class>com.gecp.emp_performance.servlets.EditForm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Update</servlet-name>
        <servlet-class>com.gecp.emp_performance.servlets.Update</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddForm</servlet-name>
        <servlet-class>com.gecp.emp_performance.servlets.AddForm</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login_Servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout_Servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Emp_Dashboard</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Add_Employee</servlet-name>
        <url-pattern>/addEmp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Delete_Employee</servlet-name>
        <url-pattern>/deleteEmployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditForm</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Update</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddForm</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
